<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white"
    cardview:cardElevation="3dp"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/itemlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/thumbnail1"
            android:layout_toRightOf="@+id/thumbnail1"
            android:maxLines="2"
            android:padding="1dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"

            android:layout_toEndOf="@+id/thumbnail1"
            android:layout_toRightOf="@+id/thumbnail1"
            android:textColor="@color/buttons_recom_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/adres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"

            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/thumbnail1"

            android:layout_toRightOf="@+id/thumbnail1"
            android:textColor="@color/phonenumber_text_color"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/thumbnail1"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="7dp"
            cardview:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/main_icon"
                cardview:srcCompat="@drawable/main_icon" />

            <TextView
                android:id="@+id/deviceidtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="3dp"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>







    </RelativeLayout>
</androidx.cardview.widget.CardView>
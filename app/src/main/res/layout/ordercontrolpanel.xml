<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="3dp"
    android:paddingEnd="3dp"
    android:paddingBottom="8dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/roundedservices"
        android:onClick="toservices"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/servisesbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/primary_text_dark"
            android:backgroundTintMode="multiply"

            android:gravity="bottom|center_horizontal"
            android:textSize="12sp"
            app:srcCompat="@drawable/iconinstrument" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Принять" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/torentbtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/roundedservices"
        android:orientation="vertical"
        android:onClick="toask">

        <ImageView
            android:id="@+id/coinbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/primary_text_dark"
            android:backgroundTintMode="multiply"
            android:gravity="bottom|center_horizontal"
            android:text="@string/ask"
            android:textSize="14sp"
            app:srcCompat="@drawable/askic" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ask" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/roundedservices"
        android:orientation="vertical"
        android:onClick="toinfo"
        >

        <ImageView
            android:id="@+id/infobtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="3dp"

            android:layout_weight="1"
            android:backgroundTintMode="src_over"
            android:gravity="bottom|center_horizontal"
            android:text="@string/info"
            android:textSize="14sp"
            app:srcCompat="@drawable/infoic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/info" />
    </LinearLayout>
</LinearLayout>